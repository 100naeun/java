package caesarcipher;

import java.util.Scanner;

public class Main {
    public static String encode(String input, int shift) {
	char a;
	int offset;
	String shifted = "";
	for (int i = 0; i < input.length(); i++) { 
	    a = input.charAt(i);
	    if ((int) a > 90) {
		offset = 97;
	    } else {
		offset = 65;
	    }
	    a = (char) (input + (((int) input + shift - offset) % 26));
	    shifted = shifted + a;
	}
	return shifted;
    }

    public static void main(String[] args) {

    }
}
